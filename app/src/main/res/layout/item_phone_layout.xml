<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/t_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/t_subbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_title"
        android:layout_toEndOf="@+id/t_image"
        android:layout_toRightOf="@+id/t_image"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/t_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t_image"
        android:layout_toEndOf="@+id/t_image"
        android:layout_toRightOf="@+id/t_image"
        android:text="TextView"
        android:textColor="#f11738"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>
