<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
<include layout="@layout/header_shop_layout"></include>
    </LinearLayout>
    <View
        android:id="@+id/iview"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#333"></View>
      <LinearLayout
          android:id="@+id/thb"
          android:layout_below="@+id/iview"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="6dp"
          android:orientation="horizontal"
          >
          <Button
              android:id="@+id/b_zong"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:background="#FFF"
              android:text="综合" />

          <Button
              android:id="@+id/b_xiao"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:background="#FFF"
              android:text="销量" />

          <Button
              android:id="@+id/b_price"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:background="#FFF"
              android:text="价格" />
      </LinearLayout>
    <View
        android:layout_below="@id/thb"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#000"
        android:id="@+id/view"></View>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_recyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
